{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "src/index.ts", "src/routes/roles.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
